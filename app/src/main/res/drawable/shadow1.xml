<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- سایه -->
            <item>
                <shape>
                    <solid android:color="#102746"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <!-- نمایش حالت اولیه دکمه -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#1976D2"
                        android:endColor="#448AFF"
                        android:centerColor="#FF9800"
                        android:angle="270" />
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- سایه -->
            <item>
                <shape>
                    <solid android:color="#102746"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <!-- نمایش بعد از کلیک -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:endColor="#FF9800"
                        android:startColor="#FFC107"
                        android:angle="270" />
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>